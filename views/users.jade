extend layout

block content
    each movie in list
        ul#contents
            h3=movie.title
            p=movie.runtime + ", " +movie.rating


    form(method="POST")
        h3 Add your favorite movie
        label(title="title") Title:
        input(type="text" id="title" name="title")
        label(title="title") Run time:
        input(type="text" id="runtime" name="runtime")
        label(title="title") Rating:
        input(type="text" id="rating" name="rating")
        input(type="submit" id="submit" value="submit")